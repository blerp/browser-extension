{
    "manifest_version": 3,
    "name": "Blerp. Sound Emotes, Alerts, Meme Soundboards",
    "description": "Blerp. Sound Memes on Streams! The best sound effects, emotes, and sound alerts for your chat and livestreaming communities!",
    "options_page": "options.html",
    "background": { "service_worker": "background.bundle.js" },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon-34.png"
    },
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "<all_urls>"],
            "js": ["contentScript.bundle.js"],
            "css": ["content.styles.css"]
        }
    ],
    "devtools_page": "devtools.html",
    "externally_connectable": {
        "matches": ["https://blerp.com/*", "https://webbeta.blerp.com/*"]
    },
    "web_accessible_resources": [
        {
            "resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
            "matches": []
        }
    ]
}
